@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var groupedData = ViewBag.GroupedData;
}

<div class="tbl">
    <h1>Detalle de Productos</h1>

    <table class="table table-striped table-bordered" style="margin-top: 20px;" id="Table">
        <thead>
            <tr>
                <th>Nombre Producto</th>
                <th>Tallas</th>
                <th>Colores</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in groupedData)
            {
                <tr>
                    <td>@item.Producto.NombreProducto</td>
                    <td>@string.Join(", ", item.Tallas)</td>
                    <td>@string.Join(", ", item.Colores)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Producto.IdProducto"><i class="fas fa-eye" style="color: #285d86; font-size: 22px"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Producto.IdProducto"><i class="fas fa-trash-alt" style="color: #bf0808; font-size: 22px"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
